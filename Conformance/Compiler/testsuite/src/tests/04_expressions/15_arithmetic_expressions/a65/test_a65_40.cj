/*
  @Name:        04_15_a65_40

  @Level:         1

  @Assertion:   4.15(65) The default strategy is the same with @OverflowThrowing.
  @Description: Checks for Int8 a, b that a - b causes an ArithmeticException (upper bound overflow) if
                @OverflowThrowing is used.
  @Mode: run
  @Negative: no
  @Structure: single
  @CompileWarning: no
  @Comment: Auto-generated by gen_exception.py

  @Issue: 0006421

*/

import utils.assert.Assert

@OverflowThrowing
func f(a: Int8, b: Int8) {
    a - b
}

main() {
    let a = 127i8
    let b = -128i8
    var caught : Bool = false
    try {
        f(a, b)
    } catch (e: ArithmeticException) {
        caught = true
    }
    Assert.isTrue(caught)
}
