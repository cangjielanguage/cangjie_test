/*
  @Name:        04_15_a68_01

  @Level:         1

  @Assertion:   4.15(68) @OverflowSaturating If overflow occurs, saturating at the numeric bounds of the type, instead
                of throwing exception
  @Description: Checks for Int8 a, b that if a + b overflows in a function marked by @OverflowSaturating, the
                exception will not be thrown and the operation will be calculated by saturating at the numeric bounds
                of the type.
  @Mode: run
  @Negative: no
  @Structure: single
  @CompileWarning: no
  @Comment: Auto-generated by gen.py

  @Issue: 0006421

*/

import utils.assert.Assert
import std.random.Random

func f(a: Int8, b: Int8) {
    a + b
}

@OverflowSaturating
func g(a: Int8, b: Int8) {
    a + b
}

main() {
    let rnd = Random(123)
    var overflowCount : Int32 = 0

    do {
        let a = rnd.nextInt8()
        let b = rnd.nextInt8()
        try {
            f(a, b)
        } catch (e: ArithmeticException) {
            overflowCount++
            let sat = g(a, b)
            Assert.isTrue(sat == Int8.Max || sat == Int8.Min)
        }
    } while (overflowCount < 256)
}
