/*
  @Name:        04_15_a68_25

  @Level:         1

  @Assertion:   4.15(68) @OverflowSaturating If overflow occurs, saturating at the numeric bounds of the type, instead
                of throwing exception
  @Description: Checks for integer a, b that if a ** b overflows in a function marked by @OverflowSaturating, the
                exception will not be thrown and the operation will be calculated by saturating at the numeric bounds
                of the type.
  @Mode: run
  @Negative: no
  @Structure: single
  @CompileWarning: no
  @Comment: Auto-generated by gen.py
*/

import utils.assert.Assert
import std.random.Random

func f(a: Int64, b: UInt64) {
    a ** b
}

@OverflowSaturating
func g(a: Int64, b: UInt64) {
    a ** b
}

main() {
    let rnd = Random(123)
    var overflowCount : Int32 = 0

    do {
        var a : Int64
        do {
            a = Int64(rnd.nextUInt32())
        } while (a < 20)
        var b : UInt64
        do {
            b = rnd.nextUInt64()
            b -= b % 2
        } while (b < 20)
        try {
            f(a, b)
        } catch (e: ArithmeticException) {
            overflowCount++
            Assert.equals(Int64.Max, g(a, b))
            Assert.equals(Int64.Max, g(-a, b))
            Assert.equals(Int64.Min, g(-a, b + 1))
        }
    } while (overflowCount < 1024)
}
