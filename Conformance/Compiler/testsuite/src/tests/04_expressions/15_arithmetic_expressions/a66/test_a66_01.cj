/*
  @Name:        04_15_a66_01

  @Level:         1

  @Assertion:   4.15(66)   If overflow occurs, throwing an exception
  @Description: Checks for Int8 a, b that a + b overflow causes an ArithmeticException if
                @OverflowThrowing is used.
  @Mode: run
  @Negative: no
  @Structure: single
  @CompileWarning: no
  @Comment: Auto-generated by gen.py

  @Issue: 0006421

*/

import utils.assert.Assert
import std.random.Random

@OverflowThrowing
func f(a: Int8, b: Int8) {
    a + b
}

main() {
    let rnd = Random(123)
    var overflowCount : Int32 = 0

    do {
        let a = rnd.nextInt8()
        var b = rnd.nextInt8()
        try {
            f(a, b)
        } catch (e: ArithmeticException) {
            overflowCount++
            var overflowCondition : Bool = false
            try {
                overflowCondition ||= a > Int8.Max - b
            } catch (e: ArithmeticException) {}
            try {
                overflowCondition ||= a < Int8.Min - b
            } catch (e: ArithmeticException) {}
            Assert.isTrue(overflowCondition)
        }
    } while (overflowCount < 256)
}
