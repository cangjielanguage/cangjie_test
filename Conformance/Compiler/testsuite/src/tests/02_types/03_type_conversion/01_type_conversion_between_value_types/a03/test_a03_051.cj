/*
  @Name:         02_03_01_a03_051

  @Level:         1

  @Assertion:    2.3.1(3) Type conversion between all numeric types (including Int8, Int16, Int32, Int64, IntNative,
                 UInt8, UInt16, UInt32, UInt64, UIntNative, Float16, Float32 and Float64).

  @Description:  Check that the type conversion from Int64 to Float32 is supported

  @Mode:         run

  @Negative:     no

*/

import utils.assert.Assert

let a1: Int64 = 1464704047
var a2: Int64 = -1297509668

func foo(): Int64 { return 709907638 }

class MyCls {
    static var m: Int64 = -1892103213
}

var r1 = Float32(a1)
let r2 = Float32(a2)

main(): Unit {
    let r3 = Float32(foo())
    var r4 = Float32(MyCls.m)

    Assert.isTrue(r1 is Float32)
    Assert.isTrue(r2 is Float32)
    Assert.isTrue(r3 is Float32)
    Assert.isTrue(r4 is Float32)

    Assert.approxEquals(1464704047.0f32, r1)
    Assert.approxEquals(-1297509668.0f32, r2)
    Assert.approxEquals(709907638.0f32, r3)
    Assert.approxEquals(-1892103213.0f32, r4)
}
