/*
  @Name:         01_04_a34_11_aadd_u16

  @Level:         1

  @Assertion:    1.4(34) +=

  @Description:  Check lexical ability of Compound assignment (+=)  UInt16.

  @Mode:         run

  @Negative:     no

  @Structure:    single

  @Comment:

*/


import utils.assert.Assert

type TestedType = UInt16;
let ct0        :  TestedType  =  0u16
let ct_opnd1   :  TestedType  =  3u16
let ct_opnd2   :  TestedType  =  2u16

var RTZero : TestedType =  ct_opnd1;

main(ina :Array<String>) {
    let z : Bool = Assert.getRuntimeZero(ina) == 0
    if (z) {RTZero = ct0;}
    var rt_opnd1: TestedType = ct_opnd1 +  RTZero;
    var rt_opnd2: TestedType = ct_opnd2 +  RTZero;
    var res1:TestedType = ct_opnd1;
    var res2:TestedType = rt_opnd1;
    res1+= ct_opnd2;
    res2+= rt_opnd2;
    Assert.equals(res1,res2)

    Assert.isTrue(res1 is TestedType)
    0
}