// LEVEL: 1
// EXEC: %compiler %cmp_opt %overflow_wrapping %f -o %output
// RUN-EXEC-PIPE: %run %run_opt %output %run_args | compare %f
// ASSERT:scan passed

func notInlineable(): Unit {}

class TestClassInt {
    public var x: Int32
    public var y: Int32
    public init(x: Int32, y: Int32) {
        this.x = x
        this.y = y
    }
}

func testMergeAllocationsIntSnippet(a: Int32): Int32 {
    var obj: TestClassInt
    if (a < 0) {
        obj = TestClassInt(1, 2)
        notInlineable()
    } else {
        obj = TestClassInt(1, 2)
        notInlineable()
    }
    if (obj.x <= 3) {
        return 1
    } else {
        return 0
    }
}

main(): Int64 {
    let x1: Int32 = testMergeAllocationsIntSnippet(3)
    if (x1 == 1) {
        print("passed")
    } else {
        print("fail")
    }
    return 0
}
