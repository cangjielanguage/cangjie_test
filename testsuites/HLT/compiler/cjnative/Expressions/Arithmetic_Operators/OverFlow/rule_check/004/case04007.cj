// EXEC: %compiler %cmp_opt %f -o %output
// RUN-ERRCHECK: %run %run_opt %output %run_args
// ASSERT: scan ArithmeticException: Overshift

func cond() {
    var temp = true
    return temp
}

func test() {
    var temp = 1
    if (cond()) {
        temp += 10
    } else {
        temp += 11
    }
    let a: Int8 = 10 >> temp
    return a
}

main() {
    test()
    1
}
