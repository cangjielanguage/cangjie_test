import std.time.*
import std.io.*
import std.console.Console
import std.fs.*
import std.collection.*
import stdx.encoding.json.stream.*
import stdx.log.*
import stdx.logger.*

@Test
class Test_jsonlogger_trace_05 {
    var fs = File("jloggertest5.txt", ReadWrite)
    var jl5 = JsonLogger(fs)

    public override func afterAll(): Unit {
        jl5.close()
        fs.close()
    }

    public init() {
        jl5.level = LogLevel.TRACE
    }

    @TestCase
    func test_jsonlogger_trace_01(): Unit {
        jl5.trace("abc", ("age", 2))
    }

    @TestCase
    func test_jsonlogger_trace_02(): Unit {
        jl5.trace("", ("age", 2))
    }

    @TestCase
    func test_jsonlogger_trace_03(): Unit {
        jl5.trace("\0", ("age", 2))
    }

    @TestCase
    func test_jsonlogger_trace_04(): Unit {
        let string_long = StringBuilder(r'a', 1000).toString()
        jl5.trace(string_long, ("age", 2))
    }

    @TestCase
    func test_jsonlogger_trace_05(): Unit {
        jl5.trace("仓颉鸿蒙", ("", 2))
    }

    @TestCase
    func test_jsonlogger_trace_06(): Unit {
        jl5.trace("齾爩麤龗灪龖厵纞虋", ("", 2))
    }

    @TestCase
    func test_jsonlogger_trace_07(): Unit {
        jl5.trace("♫♬♪♩✲✳❃❂❁❀", ("仓颉", 2))
    }

    @TestCase
    func test_jsonlogger_trace_08(): Unit {
        jl5.trace("cangjietest", ("123456", 2))
    }

    @TestCase
    func test_jsonlogger_trace_09(): Unit {
        jl5.trace("cangjietest", ("123456", ""))
    }

    @TestCase
    func test_jsonlogger_trace_10(): Unit {
        jl5.trace("cangjietest", ("123456", "仓颉"))
    }
}
