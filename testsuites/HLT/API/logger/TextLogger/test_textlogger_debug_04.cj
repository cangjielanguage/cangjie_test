import std.time.*
import std.io.*
import std.console.Console
import std.fs.*
import std.collection.*
import stdx.encoding.json.stream.*
import stdx.log.*
import stdx.logger.*

@Test
class Test_textlogger_debug_04 {
    var fs = File("tloggertest4.txt", ReadWrite)
    var tl4 = TextLogger(fs)

    public override func afterAll(): Unit {
        tl4.close()
        fs.close()
    }

    public init() {
        tl4.level = LogLevel.DEBUG
    }

    @TestCase
    func test_textlogger_debug_01(): Unit {
        tl4.debug({=> "abc"}, ("age", 2))
    }

    @TestCase
    func test_textlogger_debug_02(): Unit {
        tl4.debug({=> ""}, ("age", 2))
    }

    @TestCase
    func test_textlogger_debug_03(): Unit {
        tl4.debug({=> "\0"}, ("age", 2))
    }

    @TestCase
    func test_textlogger_debug_04(): Unit {
        let string_long = StringBuilder(r'a', 100000).toString()
        tl4.debug({=> string_long}, ("age", 2))
    }

    @TestCase
    func test_textlogger_debug_05(): Unit {
        tl4.debug({=> "仓颉鸿蒙"}, ("", 2))
    }

    @TestCase
    func test_textlogger_debug_06(): Unit {
        tl4.debug({=> "齾爩麤龗灪龖厵纞虋"}, ("", 2))
    }

    @TestCase
    func test_textlogger_debug_07(): Unit {
        tl4.debug({=> "♫♬♪♩✲✳❃❂❁❀"}, ("仓颉", 2))
    }

    @TestCase
    func test_textlogger_debug_08(): Unit {
        tl4.debug({=> "cangjietest"}, ("123456", 2))
    }

    @TestCase
    func test_textlogger_debug_09(): Unit {
        tl4.debug({=> "cangjietest"}, ("123456", ""))
    }

    @TestCase
    func test_textlogger_debug_10(): Unit {
        tl4.debug({=> "cangjietest"}, ("123456", "仓颉"))
    }
}
