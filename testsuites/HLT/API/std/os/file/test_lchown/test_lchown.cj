import std.unittest.*
import std.unittest.testmacro.*
import std.posix.*

@Test
class Test_lchown {
    @TestCase
    func test_lchown_01(): Unit {
        let res = lchown("oscfg.cfg", UInt32(0), UInt32(0))
        @Assert(res, -1)
    }

    @TestCase
    func test_lchown_02(): Unit {
        var count = 0
        try {
            let res = lchown("\0", UInt32(0), UInt32(0))
        } catch (e: IllegalArgumentException) {
            count += 1
        }
        @Assert(count, 1)
    }
}
